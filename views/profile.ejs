<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Profile | Hue Lab</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Anton&family=Playfair+Display:ital,wght@0,500;1,500&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header>
    <div id="discount" class="pt-4">
      <p>Receive 10% off your first order & Free Shipping on orders over $50!</p>
    </div>
    <nav>
      <img id="logo" src="/img/logo.png">
      <ul class="pt-2">
        <li><a href="/">Home</a></li>
        <li><a href="/about">About Us</a></li>
        <li><a href="/shop">Shop</a></li>
        <li><a href="/profile">Profile</a></li>
        <li><a href="/formulation">Formulation</a></li>
        <li><a href="/support">Customer Support</a></li>
      </ul>
      <a href="/logout" class="btn btn-outline-light btn-sm" id="logoutBtn">Logout</a>
      <!-- add shopping cart -->
    </nav>
    <div class="" id="title">
      <h1>Profile Page</h1>
    </div>
    <div class="container py-4">
      <div class="hidden col-sm-6">
        <div class="well">
            <h3><span class="fa fa-user"></span> Local</h3>
  
            <% if (user.local.email) { %>
                <p>
                    <strong>id</strong>: <%= user._id %><br>
                    <strong>email</strong>: <span id="email"><%= user.local.email %></span><br>
                    <strong>password</strong>: <%= user.local.password %>
                </p>
  
                <a href="/unlink/local" class="btn btn-default">Unlink</a>
            <% } else { %>
                <a href="/connect/local" class="btn btn-default">Connect Local</a>
            <% } %>
  
        </div>
    </div>
  </header>
  <div class="container">
        <h2>Your Formulas</h2>
        <span id="yourFormulas">
            <ul id="formulaList">
                <% for( let i = 0; i < formulas.length; i++ ) { %>
                <a href="">
                  <li style="background-color: <%= formulas[i].hex %> ;">
                    <p><%= formulas[i].name %></p>
                      <button class="btn btn-primary fa" type="submit">Order</button>
                      <button class="btn btn-primary fa fa-trash" type="submit"></button>
                    </form>
                  </li>
                </a>
                <% } %>
            </ul>
        </span>
    </div>
    <a class="btn btn-sm" href="/formulation">Get a new Formula</a>
  </div>
  <script src="https://unpkg.com/chroma-js"></script>
  <script src="main.js"></script>
</body>
</html>